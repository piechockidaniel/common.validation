@page "/"
@rendermode InteractiveServer
@using Common.Validation.Demo.Blazor.Models
@using Common.Validation.Demo.Blazor.Validators

<PageTitle>Common.Validation Demo</PageTitle>

<div class="container mt-4" style="max-width: 700px;">
    <h1>Common.Validation Blazor Demo</h1>
    <p class="text-muted">Fill in the form and click Validate to see severity-based validation in action.</p>

    <EditForm Model="@_model" OnSubmit="@HandleSubmit" FormName="personalData">
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <InputText @bind-Value="_model.FirstName" class="form-control" />
            <CvValidationMessage Result="@_result" PropertyName="FirstName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <InputText @bind-Value="_model.LastName" class="form-control" />
            <CvValidationMessage Result="@_result" PropertyName="LastName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <InputText @bind-Value="_model.Email" class="form-control" />
            <CvValidationMessage Result="@_result" PropertyName="Email" />
        </div>

        <div class="mb-3">
            <label class="form-label">Phone</label>
            <InputText @bind-Value="_model.Phone" class="form-control" />
            <CvValidationMessage Result="@_result" PropertyName="Phone" />
        </div>

        <div class="mb-3">
            <label class="form-label">Citizenship (ISO 3166)</label>
            <InputText @bind-Value="_model.Citizenship" class="form-control" />
            <CvValidationMessage Result="@_result" PropertyName="Citizenship" />
        </div>

        <div class="mb-3">
            <label class="form-label">Tax Residency (ISO 3166)</label>
            <InputText @bind-Value="_model.TaxResidency" class="form-control" />
            <CvValidationMessage Result="@_result" PropertyName="TaxResidency" />
        </div>

        <button type="submit" class="btn btn-primary">Validate</button>
    </EditForm>

    @if (_result is not null)
    {
        <hr class="my-4" />
        <h3>Validation Result</h3>
        <CvValidationSummary Result="@_result" />
    }
</div>

@code {
    private PersonalData _model = new();
    private ValidationResult? _result;
    private readonly PersonalDataValidator _validator = new();

    private void HandleSubmit()
    {
        _result = _validator.Validate(_model);
    }
}
